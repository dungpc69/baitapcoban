#include<stdio.h>

void NhapMang(int a[], int n){
	int i;
	for(i = 0; i < n; i++){
		scanf("%d", &a[i]);
	}	
}

int main(){
	
	int a[10000], n, i, j, k;
	scanf("%d", &n);
	
	NhapMang(a, n);
	
	for(i = n - 1; i >= 0; i--){
		if(a[i] <= 0){
			for(j = i; j < n - 1; j++){
				a[j] = a[j + 1];
			}
			n--;
		}
	}	
	
	int tich = a[0] * a[1] * a[2];
	for(i = 0; i < n - 2; i++){
		for(j = i + 1; j < n - 1; j++){
			for(k = j + 1; k < n; k++){
				if (a[i] * a[j] * a[k] > tich) {
					tich = a[i] * a[j] * a[k];
				}
			}
		}	
	}
	printf("%d", tich);	
	return 0;
}
