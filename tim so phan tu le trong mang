#include<stdio.h>

void NhapMang(int a[], int n) {
	int i;
	for (i = 0; i < n; i++) {
		printf("Nhap phan tu thu %d: ", i + 1);
		scanf("%d", &a[i]);
	}
}

int count_odd(int a[], int n) {
	int i;
	int count = 0;
	for (i = 0; i < n; i++) {
		if (a[i] % 2 != 0) {
			count++;
		}
	}
	return count;
}

int main() {
	
	int a[100], n, i;
	printf("So phan tu trong mang: ");
	scanf("%d", &n);
	
	NhapMang(a, n);
	printf("\nSo phan tu le trong mang la: %d", count_odd(a, n));
	
	return 0;
}
